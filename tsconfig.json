{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "lib": ["ESNext"],
    "baseUrl": ".",
    "resolveJsonModule": true,
    "noEmit": true,
    "paths": {
      "@orkestrel/core": ["./src/index.ts"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}
