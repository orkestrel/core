{
  "name": "@orkestrel/core",
  "version": "2.1.0",
  "description": "Minimal, strongly-typed adapter/port toolkit for TypeScript. Compose capabilities with tokens, wire implementations via a tiny DI container, and drive lifecycles deterministically with an orchestrator.",
  "keywords": [
    "injection",
    "ioc",
    "container",
    "dependency",
    "lifecycle",
    "orchestrator",
    "orkestrel",
    "ports",
    "adapters",
    "typescript"
  ],
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orkestrel/core.git"
  },
  "homepage": "https://github.com/orkestrel/core#readme",
  "bugs": {
    "url": "https://github.com/orkestrel/core/issues"
  },
  "author": "Orkestrel",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "clean": "node -e \"try{require('fs').rmSync(process.argv[1],{recursive:true,force:true})}catch(e){}\"",
    "build": "npm run clean dist && vite build && tsc -p tsconfig.build.json",
    "check": "tsc --noEmit",
    "format": "eslint . --fix",
    "test": "vitest run",
    "prepublishOnly": "npm run check && npm run format && npm run test && npm run build"
  },
  "devDependencies": {
    "@orkestrel/contribute": "^1.2.0",
    "@types/node": "^24.10.0",
    "eslint": "^9.39.0",
    "jiti": "^2.6.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.6"
  }
}
