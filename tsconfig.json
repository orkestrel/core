{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "baseUrl": "..",
    "paths": {
      "@orkestrel/core": [
        "src",
        "src/index.ts"
      ]
    }
  },
  "include": [
    "src"
  ]
}
