{
  "name": "@orkestrel/core",
  "version": "2.1.0",
  "description": "Minimal, strongly-typed adapter/port toolkit for TypeScript. Compose capabilities with tokens, wire implementations via a tiny DI container, and drive lifecycles deterministically with an orchestrator.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "keywords": [
    "injection",
    "ioc",
    "container",
    "dependency",
    "lifecycle",
    "orchestrator",
    "orkestrel",
    "ports",
    "adapters",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orkestrel/core.git"
  },
  "bugs": {
    "url": "https://github.com/orkestrel/core/issues"
  },
  "homepage": "https://github.com/orkestrel/core#readme",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clear": "node -e \"try{require('fs').rmSync(process.argv[1],{recursive:true,force:true})}catch(e){}\"",
    "build": "npm run clear dist && vite build && tsc -p tsconfig.build.json",
    "test": "vitest run",
    "check": "tsc -p tsconfig.json",
    "format": "eslint . --fix",
    "docs": "typedoc && npm run docs:llm",
    "docs:api": "typedoc",
    "docs:llm": "tsx scripts\\generate-llms.ts --base-url https://github.com/orkestrel/core/blob/main/docs --docs docs --out docs --keep-extensions",
    "prepublishOnly": "npm run check && npm run format && npm run test && npm run docs && npm run build"
  },
  "devDependencies": {
    "@nuxt/eslint-config": "^1.9.0",
    "@types/node": "^24.7.2",
    "eslint": "^9.37.0",
    "eslint-plugin-jsdoc": "^61.1.2",
    "eslint-plugin-tsdoc": "^0.4.0",
    "tsx": "^4.20.6",
    "typedoc": "^0.28.14",
    "typedoc-plugin-extras": "^4.0.1",
    "typedoc-plugin-frontmatter": "^1.3.0",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@orkestrel/validator": "^1.1.0"
  }
}
